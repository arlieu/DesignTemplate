#:import CustomDropDown customdropdown
#:import CustomButton custombutton


<WrappedLabel@Label>:
	size_hint_y: None
	height: self.texture_size[1] + self.texture_size[1]/2	#  height of text + half height of text
	markup: True	#  allows for text editing (bolding, italics, underlining, etc)

    
<MainMenu>:
	orientation: 'vertical' 
    screenManager: screenManager
    selectorScreen: selectorScreen

	ActionBar:
		ActionView: 
			ActionPrevious:
				title: 'UI Designs'
				with_previous: False
			ActionOverflow:
				ActionButton:
					text: 'Settings'
					on_press: app.open_settings()

	ScreenManager:
		id: screenManager

		# Add screens to manage here
		StartScreen:
			id: startScreen
			name: 'startScreen'
		SelectorScreen:
			id: selectorScreen
			name: 'selectorScreen'
		NavigationScreen:
			id: navigationScreen
			name: 'navigationScreen'
		ChartScreen:
			id: chartScreen
			name: 'chartScreen'
		MediaScreen:
			id: mediaScreen
			name: 'mediaScreen'
		AboutScreen:
			id: aboutScreen
			name: 'aboutScreen'


<StartScreen@Screen>:
	BoxLayout: 
		orientation: 'vertical'
		padding: root.width*0.02, root.height*0.02 
		spacing: min(root.width, root.height)*0.02

		WrappedLabel:	#  inheritted custom label class
			text: '[b]UI Designs[/b]'
			font_size: min(root.height, root.width)/10
		Button: 
			text: 'Selectors'
            on_release: app.root.changeScreen(self.text.lower())
		Button: 
			text: 'Navigation'
            on_release: app.root.changeScreen(self.text.lower())
		Button: 
			text: 'Charts'
            on_release: app.root.changeScreen(self.text.lower())
		Button: 
			text: 'Media'
            on_release: app.root.changeScreen(self.text.lower())
		Button: 
			text: 'About'
			on_release: app.root.changeScreen(self.text.lower())

#------------------------------Selector Menu------------------------------#
<SelectorScreen@Screen>:
    id: selectorScreen
    orientation: 'vertical' 
    selectorScreenManager: selectorScreenManager

	ScreenManager:
		id: selectorScreenManager

		SelectorStartScreen:
			id: selectorStartScreen
			name: 'selectorStartScreen'
		ButtonScreen:
			id: buttonScreen
			name: 'buttonScreen'
		ToggleButtonScreen:
			id: togglebuttonScreen
			name: 'togglebuttonScreen'
		CheckboxScreen:
			id: checkboxScreen
			name: 'checkboxScreen'
        KeyPadScreen:
			id: keypadScreen
			name: 'keypadScreen'
        

